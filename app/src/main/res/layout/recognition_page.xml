<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="_______________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topLine"
        android:id="@+id/connectionStatusSpace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/connectionStatusSpace"
        android:id="@+id/connectionStatus"/>

    <EditText
        android:id="@+id/enterSubjectNumber"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/connectionStatus"
        android:background="#FFFFFF"
        android:hint="Enter Number"
        android:textColorHint="#959595"
        android:textColor="@color/black"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/scanButton"
        android:layout_below="@id/enterSubjectNumber"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:layout_marginRight="20dp"
        android:text="Start Scan"
        android:onClick="scanButton_onClick"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:layout_below="@id/connectionStatusSpace"
        android:backgroundTint="#977001"
        android:onClick="homeButton_onClick"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="Home" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/syncButton"
        android:layout_below="@id/enterSubjectNumber"
        android:layout_toRightOf="@+id/connectionStatusSpace"
        android:layout_marginLeft="20dp"
        android:text="Start Sync"
        android:onClick="syncButton_onClick"
        android:backgroundTint="#4CAF50"/>
    <TextView
        android:id="@+id/leftThighStatusTitle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"
        android:layout_toLeftOf="@+id/leftThighStatusView"
        android:text="Left Thigh:"/>

    <TextView
        android:id="@+id/leftThighStatusView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Disconnected"/>
    <TextView
        android:id="@+id/ValueT1Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftThighStatusTitle"
        android:layout_toLeftOf="@+id/valueT1"
        android:text="Value1:"/>

    <TextView
        android:id="@+id/valueT1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/leftThighStatusView"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Value1"/>

    <TextView
        android:id="@+id/ValueT2Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT1Title"
        android:layout_toLeftOf="@+id/valueT2"
        android:text="Value2:" />

    <TextView
        android:id="@+id/valueT2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT1"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="value2"/>
    <TextView
        android:id="@+id/ValueT3Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT2Title"
        android:layout_toLeftOf="@+id/valueT3"
        android:text="Value3:"/>

    <TextView
        android:id="@+id/valueT3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT2"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="value3"/>

    <TextView
        android:id="@+id/ValueT4Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT3Title"
        android:layout_toLeftOf="@+id/valueT3"
        android:text="Battery:"/>
    <TextView
        android:id="@+id/valueT4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT3"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Value4"/>



    <TextView
        android:id="@+id/leftFootStatusTitle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syncButton"
        android:layout_toLeftOf="@+id/leftFootStatusView"
        android:text="Left Foot:"/>

    <TextView
        android:id="@+id/leftFootStatusView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syncButton"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-202dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Disconnected" />

    <TextView
        android:id="@+id/valueF1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftFootStatusView"
        android:layout_marginTop="3dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="Value1" />

    <TextView
        android:id="@+id/ValueF1Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftFootStatusTitle"
        android:layout_toLeftOf="@+id/valueF1"
        android:text="Value1:"/>

    <TextView
        android:id="@+id/valueF2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value2" />
    <TextView
        android:id="@+id/ValueF2Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF1Title"
        android:layout_toLeftOf="@+id/valueF2"
        android:text="Value2:" />
    <TextView
        android:id="@+id/valueF3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value3" />
    <TextView
        android:id="@+id/ValueF3Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF2Title"
        android:layout_toLeftOf="@+id/valueF3"
        android:text="Value3:" />
    <TextView
        android:id="@+id/valueF4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value4" />
    <TextView
        android:id="@+id/ValueF4Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF3Title"
        android:layout_toLeftOf="@+id/valueF4"
        android:text="Battery:" />
    <Button
        android:id="@+id/measureButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#3F51B5"
        android:onClick="measureButton_onClick"
        android:text="Measure" />




    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="414dp"
        android:backgroundTint="#FA5C5C"
        android:onClick="disconnectButton_onClick"
        android:text="Disconnect" />
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="414dp"
        android:backgroundTint="#5C7EFA"
        android:onClick="uploadButton_onClick"
        android:text="Upload Data" />

    <Switch
        android:id="@+id/logSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/measureButton"
        android:layout_marginLeft="-127dp"
        android:layout_marginTop="410dp"
        android:layout_toRightOf="@+id/scanButton"
        android:text="Show Log" />
    <Button
        android:id="@+id/dataLogButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueF4"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4DBDDF"
        android:text="Data Log" />
    <Button
        android:id="@+id/stopButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueF4"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#BB3EFD"
        android:onClick="stopButton_onClick"
        android:text="Stop" />
    <Button
        android:id="@+id/recognitionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueF4"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="#4CAE50"
        android:onClick="recognitionButton_onClick"
        android:text="Recognition" />

    <TextView
        android:id="@+id/logContents"
        android:layout_width="2000dp"
        android:layout_height="300dp"
        android:layout_below="@id/connectionStatusSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#000000"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="invisible" />
    <Button
        android:id="@+id/activity1Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#008884"
        android:text="Standing" />

    <TextView
        android:id="@+id/valueT5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recognitionButton"
        android:layout_marginTop="38dp"
        android:layout_marginRight="71dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value5" />
    <TextView
        android:id="@+id/valueT6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recognitionButton"
        android:layout_marginTop="70dp"
        android:layout_marginRight="71dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value6" />

    <TextView
        android:id="@+id/valueF5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity1Button"
        android:layout_marginTop="30dp"
        android:layout_marginRight="-150dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value5" />
    <TextView
        android:id="@+id/valueF6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity1Button"
        android:layout_marginTop="60dp"
        android:layout_marginRight="-150dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value6" />
    <TextView
        android:id="@+id/valueResult"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity1Button"
        android:layout_marginTop="110dp"
        android:layout_marginRight="-50dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="Results" />

</RelativeLayout>