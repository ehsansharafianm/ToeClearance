<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#052A63"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feature Detection Results"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/closeFeatureDialog"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Ã—"
            android:textSize="24sp"
            android:backgroundTint="#E65C61"
            android:padding="0dp"/>
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@drawable/log_border"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Terrain Type - LARGE AND PROMINENT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="TERRAIN TYPE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/imu1TerrainType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_terrain_box"
                android:padding="20dp"
                android:text="--"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <!-- Window Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Window #:"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/imu1WindowNumber"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E3F2FD"
                    android:padding="8dp"
                    android:text="--"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Bias Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bias Value:"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/imu1BiasValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E3F2FD"
                    android:padding="8dp"
                    android:text="--"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Max Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Max Height:"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/imu1MaxHeight"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E3F2FD"
                    android:padding="8dp"
                    android:text="-- m"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Max Stride Length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Max Stride Length:"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/imu1MaxStride"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E3F2FD"
                    android:padding="8dp"
                    android:text="-- m"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>