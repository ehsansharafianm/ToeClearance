<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/labeling_data_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- ============================================ -->
        <!-- SECTION 1: SUBJECT INFORMATION -->
        <!-- ============================================ -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3F51B5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingEnd="8dp"/>

            <EditText
                android:id="@+id/enterSubjectNumber"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@android:drawable/edit_text"
                android:hint="Subject ID"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="#959595"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ============================================ -->
        <!-- SECTION 2: SETUP IMUs -->
        <!-- ============================================ -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3F51B5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup IMUs"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/listImusButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2196F3"
            android:onClick="listImusButton_onClick"
            android:text="Search Available IMUs"
            android:textSize="14sp"/>

        <!-- IMU Selection Compact Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/labelIMU1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="IMU 1:"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <Spinner
                android:id="@+id/spinnerIMU1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/labelIMU2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="IMU 2:"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <Spinner
                android:id="@+id/spinnerIMU2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2196F3"
            android:onClick="scanButton_onClick"
            android:text="Start Scan"
            android:textSize="14sp"/>

        <!-- ============================================ -->
        <!-- SECTION 3: PROCESSING IMUs -->
        <!-- ============================================ -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3F51B5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing IMUs"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/syncButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:onClick="syncButton_onClick"
                android:text="Sync"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/measureButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:onClick="measureButton_onClick"
                android:text="Measure"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/dataLogButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="Data Log"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ============================================ -->
        <!-- SECTION 4: ONLINE INFORMATION -->
        <!-- ============================================ -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3F51B5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/logToggleButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:text="Logger"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/showImuDataButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="IMU Data"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/openLabelDialogButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:text="Activity Labels"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/showFeaturesButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="Features"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ============================================ -->
        <!-- SECTION 5: SESSION CONTROL -->
        <!-- ============================================ -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3F51B5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Control"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/stopButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#AB2727"
                android:onClick="stopButton_onClick"
                android:text="Stop"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/uploadButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:onClick="uploadButton_onClick"
                android:text="Upload"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="#AB2727"
                android:onClick="disconnectButton_onClick"
                android:text="Disconnect"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>