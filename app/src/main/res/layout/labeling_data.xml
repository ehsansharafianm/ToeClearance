<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/labeling_data_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/topLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="_______________________________________________________" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topLine"
        android:id="@+id/connectionStatusSpace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/connectionStatusSpace"
        android:id="@+id/connectionStatus"/>

    <EditText
        android:id="@+id/enterSubjectNumber"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/connectionStatus"
        android:background="#FFFFFF"
        android:hint="Enter Number"
        android:textColorHint="#959595"
        android:textColor="@color/black"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/scanButton"
        android:layout_below="@id/enterSubjectNumber"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:layout_marginRight="20dp"
        android:text="Start Scan"
        android:onClick="scanButton_onClick"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:layout_below="@id/connectionStatusSpace"
        android:backgroundTint="#717070"
        android:onClick="homeButton_onClick"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="Home" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/syncButton"
        android:layout_below="@id/enterSubjectNumber"
        android:layout_toRightOf="@+id/connectionStatusSpace"
        android:layout_marginLeft="20dp"
        android:text="Start Sync"
        android:onClick="syncButton_onClick"
        android:backgroundTint="#4CAF50"/>
    <TextView
        android:id="@+id/thighStatusTitle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"
        android:layout_toLeftOf="@+id/thighStatusView"
        android:text="Thigh:"/>

    <TextView
        android:id="@+id/thighStatusView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Disconnected"/>
    <TextView
        android:id="@+id/ValueT1Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thighStatusTitle"
        android:layout_toLeftOf="@+id/valueT1"
        android:text="Roll Angle:"/>

    <TextView
        android:id="@+id/valueT1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/thighStatusView"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Value1"/>

    <TextView
        android:id="@+id/ValueT2Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT1Title"
        android:layout_toLeftOf="@+id/valueT2"
        android:text="Value2:" />

    <TextView
        android:id="@+id/valueT2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT1"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="value2"/>
    <TextView
        android:id="@+id/ValueT3Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT2Title"
        android:layout_toLeftOf="@+id/valueT3"
        android:text="Index:"/>

    <TextView
        android:id="@+id/valueT3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT2"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="value3"/>

    <TextView
        android:id="@+id/ValueT4Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueT3Title"
        android:layout_toLeftOf="@+id/valueT3"
        android:text="Battery:"/>
    <TextView
        android:id="@+id/valueT4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/valueT3"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Value4"/>



    <TextView
        android:id="@+id/footStatusTitle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syncButton"
        android:layout_toLeftOf="@+id/footStatusView"
        android:text="Foot:"/>

    <TextView
        android:id="@+id/footStatusView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syncButton"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-202dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:text="Disconnected" />

    <TextView
        android:id="@+id/valueF1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footStatusView"
        android:layout_marginTop="3dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="Value1" />

    <TextView
        android:id="@+id/ValueF1Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footStatusTitle"
        android:layout_toLeftOf="@+id/valueF1"
        android:text="Roll Angle:"/>

    <TextView
        android:id="@+id/valueF2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value2" />
    <TextView
        android:id="@+id/ValueF2Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF1Title"
        android:layout_toLeftOf="@+id/valueF2"
        android:text="Value2:" />
    <TextView
        android:id="@+id/valueF3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value3" />
    <TextView
        android:id="@+id/ValueF3Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF2Title"
        android:layout_toLeftOf="@+id/valueF3"
        android:text="Index:" />
    <TextView
        android:id="@+id/valueF4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueF3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="-200dp"
        android:layout_toLeftOf="@+id/connectionStatusSpace"
        android:background="@drawable/rectangle"
        android:text="value4" />
    <TextView
        android:id="@+id/ValueF4Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueF3Title"
        android:layout_toLeftOf="@+id/valueF4"
        android:text="Battery:" />
    <Button
        android:id="@+id/measureButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#4DBDDF"
        android:onClick="measureButton_onClick"
        android:text="Measure" />




    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="230dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#FA5C5C"
        android:onClick="disconnectButton_onClick"
        android:text="Disconnect" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#4DBDDF"
        android:onClick="uploadButton_onClick"
        android:text="Upload Data" />

    <Switch
        android:id="@+id/logSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/measureButton"
        android:layout_marginLeft="-127dp"
        android:layout_marginTop="410dp"
        android:layout_toRightOf="@+id/scanButton"
        android:text="Show Log" />

    <Switch
        android:id="@+id/ImuSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/measureButton"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="410dp"
        android:layout_toRightOf="@+id/scanButton"
        android:text="L-R IMU" />

    <Button
        android:id="@+id/dataLogButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueF4"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4DBDDF"
        android:text="Data Log" />

    <Button
        android:id="@+id/labelButton1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="#4CAF50"
        android:text="Stand" />

    <Button
        android:id="@+id/labelButton2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#4CAF50"
        android:text="Level Walk" />
    <Button
        android:id="@+id/labelButton3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="#4CAF50"
        android:text="Ramp Ascend" />
    <Button
        android:id="@+id/labelButton4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#4CAF50"
        android:text="Ramp Descend" />
    <Button
        android:id="@+id/labelButton5"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="310dp"
        android:backgroundTint="#4CAF50"
        android:text="Stair Ascend" />
    <Button
        android:id="@+id/labelButton6"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueT4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="#4CAF50"
        android:text="Stair Descend" />



    <TextView
        android:id="@+id/logContents"
        android:layout_width="2000dp"
        android:layout_height="300dp"
        android:layout_below="@id/connectionStatusSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#426987"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueF4"
        android:layout_marginStart="230dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FA5C5C"
        android:onClick="stopButton_onClick"
        android:text="Stop" />


</RelativeLayout>